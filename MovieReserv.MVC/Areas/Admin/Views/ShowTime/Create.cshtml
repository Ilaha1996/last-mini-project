@using MovieReserv.MVC.Areas.Admin.ViewModels.MovieVM
@using MovieReserv.MVC.Areas.Admin.ViewModels.TheaterVM
@using MovieReserv.MVC.Areas.Admin.ViewModels.ShowTimeVM
@model ShowTimeCreateVM

<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="StartTime" class="form-label"></label>
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" style="color:red"></span>
    </div>
    <div class="mb-3">
        <label asp-for="EndTime" class="form-label"></label>
        <input asp-for="EndTime" class="form-control" />
        <span asp-validation-for="EndTime" style="color:red"></span>
    </div>
    <div class="mb-3 col-md-6">
        <label class="form-label">Movies</label>
        <select class="form-control" asp-for="MovieId" asp-items="@(new SelectList(ViewBag.Movies, "Id","Title"))">
        <option selected disabled>Select Movie</option>
        </select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>
    <div class="mb-3 col-md-6">
        <label class="form-label">Theaters</label>
        <select class="form-control" asp-for="TheaterId" asp-items="@(new SelectList(ViewBag.Theaters, "Id","Name"))">
        <option selected disabled>Select Theater</option>
        </select>
        <span asp-validation-for="TheaterId" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="index" class="btn btn-primary">Cancel</a>
</form>
