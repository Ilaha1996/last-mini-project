@using MovieReserv.MVC.Areas.Admin.ViewModels.ShowTimeVM
@model List<ShowTimeGetVM>
@{
    int counter = 0;
}

<div style="display:flex; justify-content:space-between; align-items:center; padding: 0 530px 0 20px">
    <h1>Show Times</h1>
    <a asp-action="Create" class="btn btn-success">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Start Time</th>
            <th scope="col">End Time</th>
            <th scope="col">Movie Title</th>
            <th scope="col">Theater Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shwtime in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@shwtime.StartTime</td>
                <td>@shwtime.EndTime</td>
                <td>@shwtime.MovieTitle</td>
                <td>@shwtime.TheaterName</td>
                <td>
                    <a asp-action="Update" asp-route-id="@shwtime.Id" class="btn btn-primary">Update</a>
                    <a asp-action="Delete" asp-route-id="@shwtime.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
