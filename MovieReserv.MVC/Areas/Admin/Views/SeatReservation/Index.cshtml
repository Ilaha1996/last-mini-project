@using MovieReserv.MVC.Areas.Admin.ViewModels.SeatReservationVM
@model List<SeatReservationGetVM>
@{
    int counter = 0;
}

<div style="display:flex; justify-content:space-between; align-items:center; padding: 0 530px 0 20px">
    <h1>Show Times</h1>
    <a asp-action="Create" class="btn btn-success">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Seat Number</th>
            <th scope="col">IsBooked</th>
            <th scope="col">ReservationId</th>          
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shwtime in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@shwtime.SeatNumber</td>
                <td>@shwtime.IsBooked</td>
                <td>@shwtime.ReservationId</td>
                <td>
                    <a asp-action="Update" asp-route-id="@shwtime.Id" class="btn btn-primary">Update</a>
                    <a asp-action="Delete" asp-route-id="@shwtime.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

